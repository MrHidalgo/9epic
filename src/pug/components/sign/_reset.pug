section#sign.sign.sign--reset
  .c-grid
    .sign__wrapper

      h1.sign__title.sign__title--pb0 Reset your password
      p.sign__desc Enter the email address associated with your account

      form.sign__form(action='' method='' autocomplete='off')
        .sign__form-field
          label(for='reset_email') Email
          input(type='email' id='reset_email' name='reset_email' placeholder='example@mail.com' required)
        .sign__form-field.sign__form-field--action
          .c-btn__wrapper.c-btn__wrapper--center
            a.c-btn.c-btn__bg(href="#")
              span Continue
        .sign__form-field
          a.sign__form-back(href="#") Back to Sign in


